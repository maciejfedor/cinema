<%= form_with(model: @movie, data: { turbo: false }, local: true) do |f|%>
  <div class="row mb-3">
    <%= f.label :title, "Title:", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label :duration, "Duration:", class: "col-sm-2 col-form-label" %>
    <div class="col-auto">
      <%= f.number_field :duration, class: "col-sm-2 col-form-label form-control", placeholder: 'in minutes'%>
    </div>
  </div>
  <%= f.submit class: "btn btn-outline-light btn-lg" %>
<%end%>
