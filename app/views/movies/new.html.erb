<%= form_with(model: movie, method: "post") do |f|%>
  <div class="row mb-3">
    <%= f.label :title, "Title:", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <%= f.label :length, "Duration:", class: "col-sm-2 col-form-label" %>
    <div class="col-auto">
      <%= f.text_field :length, class: "col-sm-2 col-form-label form-control", placeholder: 'in minutes'%>
    </div>
  </div>
  <%= f.submit 'Add movie', class: "btn btn-outline-light btn-lg" %>
</form>
<%end%>
