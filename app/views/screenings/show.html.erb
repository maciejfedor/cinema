<h2><%= @screening.movie.title %></h2>
<%= "#{@screening.start_time.strftime("%d/%m/%Y %H:%M")}" %>
<p><%= "Hall #{@screening.hall.name}" %></p>
<%= button_to "Choose seats", new_screening_reservation_path(@screening), method: :get%>
<% if user_signed_in? && policy(@screening).update? %>
  <div class ="mt-3">
    <%= button_to 'Edit Screening', edit_screening_path(@screening), class: "btn btn-secondary mb-3", method: :get%>
    <%= button_to 'Delete Screening', @screening,  method: :delete, class: "btn btn-danger mb-3"%>
  </div>
<% end %>
