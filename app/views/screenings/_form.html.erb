 <%= render 'shared/errors', obj: @screening %>
<%= form_with(model: @screening, data: { turbo: false }, local: true) do |f|%>
  <div class="row mb-6">
    <%= f.label :movie_id, "Movie:", class: "col-sm-2 col-form-label" %>
  </div>
  <div class="col-sm-10">
    <%= f.collection_select :movie_id, Movie.order(:title), :id, :title, class: "form-control" %>
  </div>
  <div class="row mb-6">
    <%= f.label :hall_id, "Hall:", class: "col-sm-2 col-form-label" %>
  </div>
  <div class="col-sm-10">
    <%= f.collection_select :hall_id, Hall.order(:id), :id, :name, class: "form-control" %>
  </div>
  <div class="row mb-6">
    <%= f.label :start_time, "Start time:", class: "col-sm-2 col-form-label" %>
  </div>
  <div class="col-sm-10">
    <%= f.datetime_field :start_time, class: "form-control" %>
  </div>
  <div class = "mt-3">
    <%= f.submit class: "btn btn-outline-light btn-lg" %>
  </div>
<%end%>
